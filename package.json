{
    "name": "vs-dao-translate",
    "displayName": "VS DAO Translate",
    "description": "一个强大的翻译插件，支持划词翻译和悬停翻译功能",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.74.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/your-username/vs-dao-translate.git"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vs-dao-translate.translate",
                "title": "Translate Selected Text"
            }
        ],
        "configuration": {
            "title": "VS DAO Translate",
            "properties": {
                "vs-dao-translate.translationService": {
                    "type": "string",
                    "enum": [
                        "google",
                        "local"
                    ],
                    "default": "google",
                    "description": "选择翻译服务提供者"
                },
                "vs-dao-translate.targetLanguage": {
                    "type": "string",
                    "default": "zh-CN",
                    "description": "目标翻译语言"
                },
                "vs-dao-translate.sourceLanguage": {
                    "type": "string",
                    "default": "auto",
                    "description": "源语言（设为auto自动检测）"
                },
                "vs-dao-translate.enableHoverTranslation": {
                    "type": "boolean",
                    "default": true,
                    "description": "启用悬停翻译功能"
                },
                "vs-dao-translate.enableSelectionTranslation": {
                    "type": "boolean",
                    "default": true,
                    "description": "启用划词翻译功能"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "16.x",
        "@types/vscode": "^1.74.0",
        "@typescript-eslint/eslint-plugin": "^5.59.1",
        "@typescript-eslint/parser": "^5.59.1",
        "@vscode/test-electron": "^2.3.0",
        "eslint": "^8.39.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^4.9.5"
    },
    "dependencies": {
        "axios": "^1.6.0"
    }
}
